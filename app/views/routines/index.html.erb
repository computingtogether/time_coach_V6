  <% if user_signed_in? %>
    <h1>Your Routines</h1>

    <table>
      <thead>
        <tr>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @routines.each do |routine| %>
          <tr>
            <td><%= routine.routine_type %> </td>
            <td><%= link_to 'Show', routine %></td>
            <td><%= link_to 'Edit', edit_routine_path(routine) %></td>
            <td><%= link_to 'Destroy', routine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <%= render 'about' %>
  <% end %>

